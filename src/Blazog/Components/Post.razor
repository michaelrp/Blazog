@inject IPostService PostService
@inject NavigationManager NavigationManager

<h2>@postInfo.Title</h2>

<PostContent>@((MarkupString)postInfo.Html)</PostContent>

<NavLink href="@($"/posts/{postInfo.PreviousLabel}")"><span class="oi oi-chevron-left"></span> Previous</NavLink>
<NavLink href="@($"/posts/{postInfo.NextLabel}")">Next <span class="oi oi-chevron-right"></span></NavLink>

@code {
    [Parameter]
    public string Label { get; set; }
    public PostInfo postInfo { get; set; }
    private string html { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if(string.IsNullOrEmpty(Label))
        {
            NavigationManager.NavigateTo("/posts");
        }

        postInfo = await PostService.GetPostAsync(Label);
    }
}